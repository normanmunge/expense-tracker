{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@expense-app/ui": ["packages/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules"],
  "files": [],
  "include": ["src/**/*"],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}
